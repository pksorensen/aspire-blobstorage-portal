{
  "name": "azure-storage-explorer",
  "version": "1.0.0",
  "description": "Azure Storage Explorer-style web application built with Next.js 15, React Server Components, and Azure Storage SDK",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "build:analyze": "ANALYZE=true next build",
    "analyze": "ANALYZE=true next build && npx next start",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:happy-path": "playwright test --grep @happy-path",
    "test:extended": "playwright test --grep @extended-happy-path",
    "test:error-scenarios": "playwright test --grep @not-so-happy-path",
    "test:performance": "playwright test --grep @performance",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test-runner": "ts-node tests/run-tests.ts",
    "test:check": "ts-node tests/run-tests.ts check",
    "test:validate": "ts-node tests/run-tests.ts validate",
    "test:accessibility": "playwright test --grep @extended-happy-path tests/specs/accessibility.spec.ts",
    "test:responsive": "playwright test --grep @extended-happy-path tests/specs/responsive.spec.ts",
    "performance:analyze": "npm run build:analyze",
    "performance:lighthouse": "npx lighthouse http://localhost:3000 --output json --output html --output-path ./lighthouse-report",
    "performance:webpagetest": "echo 'Run WebPageTest at https://www.webpagetest.org/'"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.28.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.5.2",
    "prettier": "^3.5.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.1",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
